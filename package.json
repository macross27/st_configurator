{
  "name": "uniform-configurator",
  "version": "1.0.0",
  "description": "Web-based 3D uniform configurator with layer-based texture editing and server-side image processing",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:production": "set NODE_ENV=production && vite build",
    "build:report": "npm run build:production && npm run bundle:analyze",
    "preview": "vite preview",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "start": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "start:optimized": "concurrently \"npm run server:dev\" \"vite --config vite.config.js --mode development\"",
    "install-server-deps": "npm install concurrently",
    "bundle:analyze": "npx vite-bundle-analyzer dist",
    "bundle:size": "npx bundlesize",
    "bundle:visualize": "npx rollup-plugin-visualizer dist/stats.html --open",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:fonts": "node scripts/optimize-fonts.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:memory": "vitest run tests/integration/memory-leaks.test.js",
    "test:performance": "vitest run tests/integration/performance-regression.test.js",
    "test:bundle": "vitest run tests/integration/bundle-size.test.js",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npx -p typescript tsc --noEmit --project jsconfig.json",
    "code-quality": "npm run lint:check && npm run format:check && npm run type-check",
    "fix-all": "npm run lint:fix && npm run format && npm run type-check"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "archiver": "^7.0.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dompurify": "^3.2.7",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fabric": "^5.3.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "nodemon": "^3.1.10",
    "sharp": "^0.34.3",
    "three": "^0.160.0",
    "uuid": "^12.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "glob": "^11.0.3",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.22.0",
    "terser": "^5.44.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
