# ST Configurator Environment Configuration

# Server Configuration
PORT=3030
VITE_SERVER_PORT=3030
FRONTEND_PORT=3020

# Image Processing
MAX_IMAGE_FILE_SIZE_MB=5
MAX_IMAGE_WIDTH=1024
MAX_IMAGE_HEIGHT=1024

# Security (CSP Configuration)
NODE_ENV=development
CSP_UNSAFE_INLINE_STYLES=true    # Required for Three.js
CSP_UNSAFE_EVAL_SCRIPTS=true     # Required for Three.js shaders

# Hybrid GLB System Configuration
VITE_ENABLE_HYBRID_GLB=false           # Enable/disable hybrid multi-model system
VITE_MAX_CACHED_MODELS=8               # Maximum models to keep in memory
VITE_MAX_CACHE_MEMORY_MB=256           # Memory limit for model cache (MB)

# Preloading Strategy (Advanced)
VITE_PRELOAD_ADJACENT_COUNT=2          # Number of adjacent models to preload
VITE_USE_IDLE_CALLBACK=true            # Use requestIdleCallback for preloading
VITE_PRELOAD_DELAY_MS=100              # Delay between preload operations